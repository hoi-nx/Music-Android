<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_track"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginStart="@dimen/_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="@dimen/_2dp"
        android:src="@drawable/bg_default_image"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/text_name_song"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_artist"
        app:layout_constraintStart_toEndOf="@id/image_track"
        app:layout_constraintVertical_chainStyle="packed"
        android:textStyle="bold"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@id/more"
        android:textColor="@android:color/white"
        style="@style/TextAppearance.AppCompat.Medium"
        android:ellipsize="marquee"/>
    <TextView
        android:id="@+id/text_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name_song"
        app:layout_constraintStart_toStartOf="@id/text_name_song"
        app:layout_constraintEnd_toStartOf="@id/more"
        android:textStyle="bold"
        android:textColor="@color/color_gray_500"
        android:ellipsize="end"
        android:maxLines="1"
        style="@style/TextAppearance.AppCompat.Small"
        />
    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_more_horiz"
        android:padding="@dimen/_16dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>